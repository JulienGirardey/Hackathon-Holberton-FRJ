{
  "manifest_version": 3,
  "name": "Quick Links - Holberton Dashboard",
  "version": "1.0",
  "description": "Accès rapide à vos applications favorites : Intra Holberton, GitHub, Slack et liens personnalisés",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Quick Links Dashboard"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
